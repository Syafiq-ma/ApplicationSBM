<Display>:
    SensorBox:
    BoxLayout:
        orientation:'vertical'
        spacing: '20dp'
        Label:
            text:'Smart Contactor'
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_y: .5
            color: 0 , 0 , 0 , 1
            font_size: 20
        Button:
            size_hint: .2,.1
            bold: True
            background_color: 0,0,0,0
            font_size: 20
            color: 1,1,1
            canvas.before:
                Color:
                    rgba: (0, 0.753, 0.451,1) if self.state=='normal' else (0,.7,.7,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
            text:'Saklar'
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.toggle()
        Widget
<SensorBox>:
    orientation: 'horizontal'
    pos: self.parent.pos
    size: self.parent.size
    canvas:
        Color:
            rgba: 0, 0, 0, 0.03
        RoundedRectangle:
            pos: (self.pos[0] - 3, self.pos[1] - 5)
            size: (self.size[0] + 7, self.size[1] + 5)
            radius: 10, 10
        Color:
            rgba: 0, 0, 0, 0.04
        RoundedRectangle:
            pos: (self.pos[0] - 4, self.pos[1] - 6)
            size: (self.size[0] + 8, self.size[1] + 7)
            radius: 10, 10
        Color:
            rgba: 0, 0, 0, 0.03
        RoundedRectangle:
            pos: (self.pos[0] - 5, self.pos[1] - 7)
            size: (self.size[0] + 10, self.size[1] + 9)
            radius: 10, 10
        Color:
            rgba: 0, 0, 0, 0.02
        RoundedRectangle:
            pos: (self.pos[0] - 6, self.pos[1] - 8)
            size: (self.size[0] + 12, self.size[1] + 11)
            radius: 10, 10
        Color:
            rgba: 0, 0, 0, 0.01
        RoundedRectangle:
            pos: (self.pos[0] - 7, self.pos[1] - 9)
            size: (self.size[0] + 14, self.size[1] + 13)
            radius: 10, 10
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: 5, 5
